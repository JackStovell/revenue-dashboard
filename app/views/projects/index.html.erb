<% provide(:title, "Index") %> 

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
          <h1 class="page-header">Revenue Dashboard</h1>
            <table class="table table-striped">
  <thead>
    <tr>
      <th>Client</th>
      <th>Project Name</th>
      <th>Job number</th>
      <th>Status</th>
      <th>Billing</th>
      <th>Cost</th>
      <th>Revenue</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.client %></td>
        <td><%= project.name.capitalize  %></td>
        <td><%= project.jobNumber.capitalize  %></td>
        <td><%= project.status.capitalize  %></td>
        <td><%= project.billing  %></td>
        <td><%= project.cost  %></td>
        <td><%= project.income %></td>
        <td><%= link_to 'Show', project %></td>
        <td><%= link_to 'Edit', edit_project_path(project) %></td>
        <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>

      </tr>
  <% end %>
        <tr>
      <th>Total</th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </tbody>
  
  
</table>
<%= link_to 'New Project', new_project_path %>

</div>
</div>

<br>


 </body>
</html>